<h1>Pearups Mentors</h1>

<table>
  <tr>
    <th>Mentor Name</th>
    <th>Skills</th>
    <th>Email</th>
    <th>Twitter</th>
    <th colspan="3"></th>
  </tr>

  <% @mentors.each do |mentor| %>
    <tr>
      <td><%= mentor.name %></td>
      <td><%= mentor.skills %></td>
      <td><%= mentor.email %></td>
      <td><%= mentor.twitter %></td>
      <td><%= link_to 'Profile', mentor_path(mentor) %></td>
      <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
      <td><%= link_to 'Delete', mentor_path(mentor),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Become a Mentor!', new_mentor_path %> |
<%= link_to 'Back', welcome_index_path %>
