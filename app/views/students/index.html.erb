<h1>All Students</h1>

<table>
  <tr>
    <th>Student Name</th>
    <th>Skills Desired</th>
    <th>Email</th>
    <th>Twitter</th>
    <th colspan="3"></th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.wanted_skills %></td>
      <td><%= student.email %></td>
      <td><%= student.twitter %></td>
      <td><%= link_to 'Profile', student_path(student) %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Delete', student_path(student),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Become a Student!', new_student_path %> |
